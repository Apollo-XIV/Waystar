{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "paths": {
         "@middleware": ["middleware"],
         "@middleware/*": ["middleware/*"],
         "@entities": ["entity"],
         "@entities/*": ["entity/*"],
         "@routes": ["routes"],
         "@repos": ["repos"],
         "@/*": ["./*"],
      },
      "baseUrl": "./src"
   },
   "include": ["**/*"],
   "exclude": ["node_modules"]

}